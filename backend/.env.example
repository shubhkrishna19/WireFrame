# ========================================
# MULARY E-COMMERCE BACKEND CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:5173

# ========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mulary_ecommerce
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# Alternative: Full connection string
# DATABASE_URL=postgresql://postgres:password@localhost:5432/mulary_ecommerce

# ========================================
# REDIS CONFIGURATION (for caching & sessions)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# JWT & AUTHENTICATION
# ========================================
# Generate secure random strings for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_64_chars_minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_64_chars
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# EMAIL CONFIGURATION (Nodemailer/SendGrid)
# ========================================
# For Gmail: Use App Password (not regular password)
# Gmail setup: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
EMAIL_FROM=noreply@mulary.com
EMAIL_FROM_NAME=Mulary

# Alternative: SendGrid API
# SENDGRID_API_KEY=your_sendgrid_api_key

# ========================================
# PAYMENT GATEWAY - STRIPE (International)
# ========================================
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_CURRENCY=inr

# ========================================
# PAYMENT GATEWAY - RAZORPAY (India)
# ========================================
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# ========================================
# CLOUD STORAGE - CLOUDINARY
# ========================================
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_PRESET=mulary_products

# ========================================
# SECURITY SETTINGS
# ========================================
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
SESSION_SECRET=your_session_secret_change_this_in_production
COOKIE_DOMAIN=localhost
COOKIE_MAX_AGE=604800000

# ========================================
# FILE UPLOAD SETTINGS
# ========================================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/jpg
UPLOAD_DIR=./uploads

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ========================================
# BUSINESS SETTINGS
# ========================================
# Shipping
FREE_SHIPPING_THRESHOLD=1500
DEFAULT_SHIPPING_COST=100
EXPRESS_SHIPPING_COST=200

# Currency
DEFAULT_CURRENCY=INR
CURRENCY_SYMBOL=â‚¹

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ========================================
# ADMIN SETTINGS
# ========================================
ADMIN_EMAIL=admin@mulary.com
ADMIN_PASSWORD=ChangeThisStrongPassword123!

# ========================================
# THIRD-PARTY SERVICES (Optional)
# ========================================
# Google Analytics
GA_TRACKING_ID=

# Sentry (Error Tracking)
SENTRY_DSN=

# Google Places API (Address autocomplete)
GOOGLE_PLACES_API_KEY=

# SMS Gateway (Twilio, etc.)
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# ========================================
# DEVELOPMENT / TESTING
# ========================================
# Set to 'true' to enable detailed logging
DEBUG=false

# Set to 'true' to seed database with test data
SEED_DATABASE=false

# Test mode (skips actual payment processing)
TEST_MODE=true
