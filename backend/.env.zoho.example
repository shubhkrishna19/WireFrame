# ================================
# ZOHO INTEGRATION CONFIGURATION
# ================================
# Add these variables to your .env file

# Zoho OAuth Credentials (from https://api-console.zoho.com/)
ZOHO_CLIENT_ID=1000.XXXXXXXXXXXXXXXXXXXXXXXXXXXX
ZOHO_CLIENT_SECRET=abcdefghijXXXXXXXXXXXXXXXXXXXX
ZOHO_REFRESH_TOKEN=1000.XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Zoho Organization ID (found in Zoho admin settings)
ZOHO_ORG_ID=12345678

# Zoho API Endpoints (India datacenter - change for other regions)
ZOHO_ACCOUNTS_URL=https://accounts.zoho.in
ZOHO_CRM_URL=https://www.zohoapis.in/crm/v2
ZOHO_BOOKS_URL=https://www.zohoapis.in/books/v3
ZOHO_DESK_URL=https://desk.zoho.in/api/v1

# Zoho Desk Department ID (for ticket routing)
ZOHO_DESK_DEPARTMENT_ID=your-department-id

# Webhook Security (optional but recommended)
ZOHO_WEBHOOK_SECRET=your-webhook-secret

# ================================
# REGION-SPECIFIC ENDPOINTS
# ================================
# US: accounts.zoho.com, www.zohoapis.com
# EU: accounts.zoho.eu, www.zohoapis.eu
# IN: accounts.zoho.in, www.zohoapis.in
# AU: accounts.zoho.com.au, www.zohoapis.com.au
